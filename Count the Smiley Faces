public static int countSmileys(String[] inputArr){
        int smileCount = 0;
        for (String s : inputArr) {
            if (s.length() > 3 || (s.charAt(0) != ':' && s.charAt(0) != ';') || (!s.endsWith(")") && !s.endsWith("D")) || (s.length() == 3 && s.charAt(1) != '-' && s.charAt(1) != '~')) {
                continue;
            }
            smileCount++;
        }
        return smileCount;
    }
